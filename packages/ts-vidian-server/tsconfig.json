{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2017",
        "module": "commonjs", //组织代码⽅方式
        "sourceMap": true,
        "moduleResolution": "node", // 模块解决策略略 
        "experimentalDecorators": true, 
        // 开启装饰器器定义
        "allowSyntheticDefaultImports": true, 
        "typeRoots": [
            "./node_modules/@types"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}